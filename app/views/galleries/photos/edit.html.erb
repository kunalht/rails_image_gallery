<h2> Edit Photo <%= @photo.name %> </h2>

<% if flash[:error] %>
  <div class="alert alert-danger" role="alert">
    <%= flash[:error] %>
  </div>
<% end %>

<%= form_with(model: @photo, url: gallery_photo_path(@gallery, @photo), method: "patch") do |form| %>

  <%= render partial: 'form', locals: {form: form} %>
  <div class="row mt-2">
    <div class="col-md-12">
      <%= form.submit 'Update Photo', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>