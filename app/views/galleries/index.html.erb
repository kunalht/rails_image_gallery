<h2> Galleries </h2>

<div class="row">
  <div class="col-md-12">
    <%= link_to 'New Gallery', new_gallery_path, class: 'btn btn-primary' %>
  </div>
</div>


<table class="table table-striped">
	<thead>
		<tr>
			<th>Gallery Name</th>
			<th>Gallery Description</th>
    </tr>
  </thead>
  <tbody>
    <% @galleries.each do |gallery| %>
      <tr>
        <td> <%= link_to gallery.name, gallery_path(gallery) %> </td>

        <td> <%= gallery.description %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="row">
  <div class="col-12 col-md-9">
    <%= paginate @galleries %>
  </div>
  <div class="col-12 col-md-3">
    <%= page_entries_info @galleries %>
  </div>
</div>
