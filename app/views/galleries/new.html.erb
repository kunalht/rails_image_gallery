<h2> New Gallery form </h2>

<%= form_with model: @gallery do |form| %>
  <div class="row">
    <div class="col-md-3">
      <%= form.label :name, class: 'control-label fw-bold required' %>
    </div>
    <div class="col-md-7">
      <%= form.text_field :name, class: 'form-control' %>
    </div>
  </div>

    <div class="row mt-3">
      <div class="col-md-3">
        <%= form.label :description, class: 'control-label fw-bold required' %>
      </div>
      <div class="col-md-7">
        <%= form.text_area :description, class: 'form-control' %>
      </div>
    </div>

  <div class="row mt-2">
    <div class="col-md-12">
      <%= form.submit 'Create New Gallery', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>

