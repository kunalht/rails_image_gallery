<h2>
  <%= @gallery.name %>
</h2>


<div class="row">
  <div class="col-12">
    <dl>
      <div class="row">
        <dt class="col-md-2 fw-bold">
          Gallery Name:
        </dt>
        <dd class="col-md-9">
          <%= @gallery.name %>
        </dd>
      </div>

      <div class="row">
        <dt class="col-md-2 fw-bold">
          Gallery Description:
        </dt>
        <dd class="col-md-9">
          <%= @gallery.description %>
        </dd>
      </div>
      <div class="row">
        <dt class="col-md-2">
          Created At:
        </dt>
        <dd class="col-md-8">
          <%= format_date(@gallery.created_at) %>
        </dd>
      </div>
    </dl>
  </div>
</div>

<%= link_to "edit #{@gallery.name}", edit_gallery_path(@gallery), class: "btn btn-primary" %>

<%= link_to "Delete #{@gallery.name}", gallery_path(@gallery), method: :delete, class: "btn btn-danger" %>


<%= link_to 'upload new photo', new_gallery_photo_path(@gallery), class: 'btn btn-success' %>


<h3 class="mt-3"> Gallery Pictures </h3>

<div class="row">
  <div class="col-9 col-md-12">
    <div class="row">
      <% @photos.each do |photo| %>
        <div class="col-4">
          <div class="card" style="width: 18rem;">
            <%= image_tag photo.image.variant(resize: "300x300"), class: "card-img-top" %>
            <div class="card-body">
              <h5 class="card-title">
                <%= link_to photo.name, gallery_photo_path(@gallery, photo) %>
              </h5>
              <p class="card-text"><%= photo.description %></p>
              <%= link_to 'More Details', gallery_photo_path(@gallery, photo), class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-3 col-md-12">
    <h4> Click on tag to assign to gallery </h4>
    <% @tags.each do |tag| %>
      <span class="badge bg-info">
        <%= tag.name %>
      </span>
    <% end %>
  </div>
</div>

<div class="row mt-3">
  <div class="col-12 col-md-9">
    <%= paginate @photos %>
  </div>
  <div class="col-12 col-md-3">
    <%= page_entries_info @photos %>
  </div>
</div>

