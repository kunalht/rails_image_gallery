<h2> New Tag form </h2>

<%= form_with model: @tag do |form| %>
  <div class="row">
    <div class="col-md-3">
      <%= form.label :name, class: 'control-label fw-bold required' %>
    </div>
    <div class="col-md-7">
      <%= form.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="row mt-2">
    <div class="col-md-12">
      <%= form.submit 'Create New Tag', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>

