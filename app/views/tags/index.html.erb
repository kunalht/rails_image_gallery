<h2> Tags </h2>

<div class="row">
  <div class="col-md-12">
    <%= link_to 'New Tag', new_tag_path, class: 'btn btn-primary' %>
  </div>
</div>


<table class="table table-striped">
	<thead>
		<tr>
			<th>Tag Name</th>
    </tr>
  </thead>
  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td> <%= link_to tag.name, tag_path(tag) %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="row">
  <div class="col-12 col-md-9">
    <%= paginate @tags %>
  </div>
  <div class="col-12 col-md-3">
    <%= page_entries_info @tags %>
  </div>
</div>

<%= link_to 'Home page', root_path %>
