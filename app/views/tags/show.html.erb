<h3 class="mt-3">Pictures with the tag</h3>

<div class="row">
  <div class="col-9 col-md-12">
    <div class="row">
      <% @photo_tags.each do |pt| %>
        <div class="col-4">
          <div class="card" style="width: 18rem;">
            <%= image_tag pt.photo.image.variant(resize: "300x300"), class: "card-img-top" %>
            <div class="card-body">
              <h5 class="card-title">
                <%= link_to pt.photo.name, gallery_photo_path(pt.photo.gallery, pt.photo) %>
              </h5>
              <p class="card-text"><%= pt.photo.description %></p>
              <%= link_to 'More Details', gallery_photo_path(pt.photo.gallery, pt.photo), class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


<h3 class="mt-3">Galleries with the tag</h3>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Gallery Name</th>
			<th>Gallery Description</th>
    </tr>
  </thead>
  <tbody>
    <% @gallery_tags.each do |gt| %>
      <tr>
        <td> <%= link_to gt.gallery.name, gallery_path(gt.gallery) %> </td>

        <td> <%= gt.gallery.description %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back to Tags', tags_path %>
